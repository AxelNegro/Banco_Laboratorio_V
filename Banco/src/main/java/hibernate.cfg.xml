<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Banco?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">create</property>
        <mapping class="entidad.Usuario"/>
        <mapping class="entidad.Usuario_Cliente"/>
        <mapping class="entidad.Tipo_Cuenta"/>
        <mapping class="entidad.Prestamos"/>
        <mapping class="entidad.Prestamos_x_Cliente"/>
        <mapping class="entidad.Historial_x_Cuenta"/>
        <mapping class="entidad.Cuenta"/>
        <mapping class="entidad.Clientes_x_Cuenta"/>
        <mapping class="entidad.Cliente_x_Movimiento"/>
    </session-factory>
</hibernate-configuration>
